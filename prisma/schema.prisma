generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  postId    Int     @id @default(autoincrement())
  title     String
  titleLocalization Localization[] @relation(name: "TitleLocalization")
  body String
  bodyLocalization Localization[] @relation(name: "BodyLocalization")
  categoryId Int?
  category Category? @relation(fields: [categoryId], references: [categoryId])
}

model Category {
  categoryId Int @id @default(autoincrement())
  name String
  nameLocalization Localization[]
  posts Post[]
}

model Localization {
    localizationId Int @id @default(autoincrement())
    language String // Enum
    value String
    titlePostId Int?
    titlePost Post? @relation(name: "TitleLocalization", fields: [titlePostId])
    bodyPostId Int?
    bodyPost Post? @relation(name: "BodyLocalization", fields: [bodyPostId])
}
